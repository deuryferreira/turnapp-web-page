---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import teamImage from "../assets/team-photo.jpg";

const teamMembers = [
  {
    name: "Deury Ferreira",
    role: "Fundador & CEO",
    bio: "Más de 15 años de experiencia en transformación digital de servicios al cliente. Fundó TurnApp para revolucionar la gestión de turnos en instituciones latinoamericanas.",
    avatar: "/avatars/male-avatar.png",
    social: {
      linkedin: "https://linkedin.com/in/carlos-mendoza",
      twitter: "https://twitter.com/carlosm",
    },
  },
  {
    name: "Rocío Ferreira",
    role: "Directora  Comercial",
    bio: "Especialista en desarrollo de software para gestión de servicios con 12+ años de experiencia. Lidera el equipo técnico para crear soluciones escalables y confiables.",
    avatar: "/avatars/female-avatar.png",
    social: {
      linkedin: "https://linkedin.com/in/ana-rodriguez",
      github: "https://github.com/anar",
    },
  },
];

const values = [
  {
    title: "Innovación en Servicio",
    description:
      "Transformamos la experiencia de atención al cliente mediante tecnología moderna que optimiza tiempos y mejora la satisfacción de usuarios.",
    icon: "ph:lightbulb-duotone",
  },
  {
    title: "Simplicidad Operativa",
    description:
      "Hacemos que la gestión de turnos sea intuitiva y eficiente, eliminando la complejidad para que las instituciones se enfoquen en su misión.",
    icon: "ph:puzzle-piece-duotone",
  },
  {
    title: "Experiencia Comprobada",
    description:
      "Nuestro equipo cuenta con años de experiencia implementando sistemas de gestión en instituciones de diversos sectores.",
    icon: "ph:chart-line-duotone",
  },
  {
    title: "Compromiso con Resultados",
    description:
      "Garantizamos que cada implementación genere mejoras medibles en eficiencia y experiencia del usuario final.",
    icon: "ph:target-duotone",
  },
];

const timeline = [
  {
    year: "2019",
    title: "La Idea Nace",
    description:
      "Carlos identifica la necesidad de modernizar los sistemas de turnos en instituciones públicas y privadas durante su trabajo en consultoría.",
  },
  {
    year: "2021",
    title: "Formación del Equipo",
    description:
      "Se unen expertos en tecnología, experiencia de usuario y gestión de servicios para desarrollar la primera versión de TurnApp.",
  },
  {
    year: "2022",
    title: "Lanzamiento de TurnApp",
    description:
      "Primera implementación exitosa en un centro de salud, demostrando reducciones del 40% en tiempos de espera.",
  },
  {
    year: "2023",
    title: "Expansión Regional",
    description:
      "TurnApp se expande a múltiples países de Latinoamérica, atendiendo instituciones de salud, gobierno y servicios financieros.",
  },
];
---

<Layout
  title="TurnApp - Nosotros"
  description="Conoce nuestra misión, valores, equipo y la historia de cómo creamos el sistema de gestión de turnos más moderno del mercado."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          Sobre <span class="gradient-text">TurnApp</span>
        </h1>
        <p class="mt-6 text-xl text-gray-600">
          Empoderamos a las instituciones para transformar la experiencia de
          atención mediante sistemas de gestión de turnos modernos y eficientes.
        </p>
      </div>

      <div class="mt-16 animate-on-scroll">
        <div class="relative rounded-xl overflow-hidden">
          <Image
            src={teamImage}
            alt="Equipo TurnApp"
            class="w-full h-auto"
            width={1200}
            height={600}
          />
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Nuestros Valores</h2>
        <p class="mt-4 text-xl text-gray-600">
          Los principios que guían todo lo que hacemos.
        </p>
      </div>

      <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          values.map((value, index) => (
            <div
              class="bg-white rounded-xl p-8 shadow-sm hover:shadow-lg transition-shadow duration-300 animate-on-scroll"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="h-12 w-12 rounded-lg bg-gradient-to-r from-payflo-purple to-payflo-blue flex items-center justify-center text-white mb-6">
                <Icon name={value.icon} class="h-6 w-6" />
              </div>
              <h3 class="text-xl font-semibold">{value.title}</h3>
              <p class="mt-3 text-gray-600">{value.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Nuestra Historia</h2>
      </div>

      <div class="mt-12 max-w-4xl mx-auto">
        <div class="relative">
          {
            timeline.map((event, index) => (
              <div
                class="relative pl-8 pb-12 animate-on-scroll"
                style={`animation-delay: ${index * 0.15}s`}
              >
                <div class="absolute left-0 top-0 h-full w-px bg-gradient-to-b from-payflo-purple to-payflo-blue" />
                <div class="absolute left-[-4px] top-2 h-2 w-2 rounded-full bg-payflo-purple" />
                <div class="text-sm font-semibold text-payflo-purple">
                  {event.year}
                </div>
                <h3 class="mt-2 text-xl font-semibold">{event.title}</h3>
                <p class="mt-2 text-gray-600">{event.description}</p>
              </div>
            ))
          }
        </div>
        <div class="mt-12 text-center">
          <p class="text-xl font-medium text-gray-700">
            Desde el equipo que ha transformado servicios en instituciones de
            salud, gobierno y servicios financieros, estamos construyendo la
            solución que siempre quisimos tener para optimizar la atención al
            público.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Conoce Nuestro Equipo</h2>
        <p class="mt-4 text-xl text-gray-600">
          Los expertos detrás de la plataforma de gestión de turnos TurnApp.
        </p>
      </div>

      <div
        class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto"
      >
        {
          teamMembers.map((member, index) => (
            <div
              class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center animate-on-scroll flex flex-col items-center justify-center"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="relative mb-6">
                <img
                  src={member.avatar}
                  alt={member.name}
                  class="w-32 h-32 rounded-full mx-auto border-4 border-payflo-purple/10 object-cover"
                />
                <div class="absolute bottom-2 right-2 h-6 w-6 rounded-full bg-green-400 border-2 border-white" />
              </div>

              <div class="flex-grow flex flex-col justify-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  {member.name}
                </h3>
                <p class="text-payflo-purple font-semibold text-lg mb-4">
                  {member.role}
                </p>
                <p class="text-gray-600 leading-relaxed mb-6">{member.bio}</p>
              </div>

              <div class="mt-auto pt-4 flex justify-center space-x-4">
                {member.social.linkedin && (
                  <a
                    href={member.social.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-payflo-purple transition-colors duration-200 p-2 rounded-full hover:bg-gray-50"
                  >
                    <Icon name="ph:linkedin-logo-duotone" class="h-6 w-6" />
                  </a>
                )}
                {member.social.twitter && (
                  <a
                    href={member.social.twitter}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-payflo-purple transition-colors duration-200 p-2 rounded-full hover:bg-gray-50"
                  >
                    <Icon name="ph:twitter-logo-duotone" class="h-6 w-6" />
                  </a>
                )}
                {member.social.github && (
                  <a
                    href={member.social.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-payflo-purple transition-colors duration-200 p-2 rounded-full hover:bg-gray-50"
                  >
                    <Icon name="ph:github-logo-duotone" class="h-6 w-6" />
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Métricas de Impacto -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Nuestro Impacto</h2>
        <p class="mt-4 text-xl text-gray-600">
          Resultados tangibles que hemos logrado para nuestras instituciones
          clientes.
        </p>
      </div>

      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center animate-on-scroll">
          <div class="text-3xl md:text-4xl font-bold text-payflo-purple">
            40%
          </div>
          <p class="mt-2 text-gray-600">Reducción en tiempos de espera</p>
        </div>
        <div
          class="text-center animate-on-scroll"
          style="animation-delay: 0.1s"
        >
          <div class="text-3xl md:text-4xl font-bold text-payflo-purple">
            150+
          </div>
          <p class="mt-2 text-gray-600">Instituciones atendidas</p>
        </div>
        <div
          class="text-center animate-on-scroll"
          style="animation-delay: 0.2s"
        >
          <div class="text-3xl md:text-4xl font-bold text-payflo-purple">
            95%
          </div>
          <p class="mt-2 text-gray-600">Satisfacción del usuario</p>
        </div>
        <div
          class="text-center animate-on-scroll"
          style="animation-delay: 0.3s"
        >
          <div class="text-3xl md:text-4xl font-bold text-payflo-purple">5</div>
          <p class="mt-2 text-gray-600">Países de Latinoamérica</p>
        </div>
      </div>
    </div>
  </section>

