---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const contactMethods = [
  {
    title: "Información General",
    description:
      "Contáctanos para consultas generales, soporte técnico o oportunidades de colaboración.",
    icon: "ph:envelope-duotone",
    email: "info@ferreiratic.com",
  },
];
---

<Layout
  title="Contáctanos - Ferreira TIC"
  description="Ponte en contacto con nuestro equipo para consultas generales, soporte técnico o oportunidades de colaboración."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          Ponte en <span class="gradient-text">Contacto</span>
        </h1>
        <p class="mt-6 text-xl text-gray-600">
          Nos encantaría saber de ti. Contáctanos para cualquier consulta o
          solicitud.
        </p>
      </div>

      <div class="mt-16 flex justify-center">
        <div
          class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 text-center animate-on-scroll max-w-md w-full"
        >
          <div
            class="mx-auto flex items-center justify-center w-16 h-16 rounded-full bg-payflo-purple/10 text-payflo-purple mb-6"
          >
            <Icon name="ph:envelope-duotone" class="h-8 w-8" />
          </div>
          <h3 class="text-xl font-semibold">Información General</h3>
          <p class="mt-3 text-gray-600">
            Contáctanos para consultas generales, soporte técnico o
            oportunidades de colaboración.
          </p>
          <a
            href="mailto:info@ferreiratic.com"
            class="mt-4 block text-payflo-purple font-medium hover:underline text-lg"
          >
            info@ferreiratic.com
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div
        class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden"
      >
        <div class="p-8 md:p-12">
          <h2 class="text-2xl md:text-3xl font-bold mb-6">
            Envíanos un Mensaje
          </h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-gray-700 font-medium mb-2"
                  >Nombre</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-payflo-purple focus:border-payflo-purple"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-gray-700 font-medium mb-2"
                  >Email</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-payflo-purple focus:border-payflo-purple"
                  required
                />
              </div>
            </div>
            <div>
              <label for="company" class="block text-gray-700 font-medium mb-2"
                >Empresa</label
              >
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-payflo-purple focus:border-payflo-purple"
              />
            </div>
            <div>
              <label for="subject" class="block text-gray-700 font-medium mb-2"
                >Asunto</label
              >
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-payflo-purple focus:border-payflo-purple"
                required
              >
                <option value="" disabled selected>Selecciona una opción</option
                >
                <option value="Consulta General">Consulta General</option>
                <option value="Soporte Técnico">Soporte Técnico</option>
                <option value="Colaboración">Colaboración</option>
                <option value="Cotización">Cotización</option>
                <option value="Otro">Otro</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-gray-700 font-medium mb-2"
                >Mensaje</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-payflo-purple focus:border-payflo-purple"
                placeholder="Describe tu consulta o solicitud..."
                required></textarea>
            </div>
            <div>
              <button type="submit" class="btn btn-primary w-full md:w-auto">
                Enviar Mensaje
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Nuestra Ubicación</h2>
        <p class="mt-4 text-xl text-gray-600">
          Estamos aquí para ayudarte en lo que necesites.
        </p>
        <address class="mt-6 not-italic text-gray-600">
          Ferreira TIC<br />
          Soluciones Tecnológicas<br />
          Email: info@ferreiratic.com
        </address>
      </div>

      <div class="mt-12 h-96 rounded-xl overflow-hidden animate-on-scroll">
        <!-- Placeholder para mapa o imagen -->
        <div
          class="w-full h-full bg-payflo-gray flex items-center justify-center rounded-xl border border-gray-200"
        >
          <div class="text-center">
            <div
              class="mx-auto flex items-center justify-center w-16 h-16 rounded-full bg-payflo-purple/10 text-payflo-purple mb-4"
            >
              <Icon name="ph:map-pin-duotone" class="h-8 w-8" />
            </div>
            <p class="text-gray-500 font-medium">
              Disponibles para proyectos en toda Latinoamérica
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .container-custom {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bg-payflo-gray {
    background-color: #f8fafc;
  }

  .bg-payflo-purple\/10 {
    background-color: rgba(102, 126, 234, 0.1);
  }

  .text-payflo-purple {
    color: #667eea;
  }

  .focus\:ring-payflo-purple:focus {
    --tw-ring-color: rgba(102, 126, 234, 0.2);
  }

  .focus\:border-payflo-purple:focus {
    border-color: #667eea;
  }
</style>
