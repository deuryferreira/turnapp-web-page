---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import CTASection from "../components/CTASection.astro";

const tiers = [
  {
    name: "Básico",
    price: "$199",
    period: "/mes",
    description:
      "Perfecto para instituciones pequeñas que comienzan con la gestión digital de turnos.",
    features: [
      "Hasta 5 áreas de servicio",
      "Hasta 10 puestos de atención",
      "Pantalla HUB personalizable",
      "Soporte técnico estándar",
      "Reportes básicos de eficiencia",
      "Gestión de turnos en tiempo real",
      "Tickets digitales",
      "App móvil para personal",
    ],
    cta: {
      text: "Prueba Gratuita",
      href: "/book-demo",
    },
  },
  {
    name: "Profesional",
    price: "$399",
    period: "/mes",
    description:
      "Para instituciones medianas con múltiples áreas y alta demanda de atención.",
    features: [
      "Hasta 15 áreas de servicio",
      "Hasta 30 puestos de atención",
      "Todas las características Básico",
      "Soporte prioritario",
      "Reportes avanzados y analytics",
      "Personalización avanzada de HUB",
      "Integración con pantallas múltiples",
      "Gestión de usuarios y permisos",
    ],
    cta: {
      text: "Solicitar Demo",
      href: "/book-demo",
    },
  },
];

const enterpriseFeatures = [
  "Áreas de servicio ilimitadas",
  "Puestos de atención ilimitados",
  "Soporte 24/7 dedicado",
  "Desarrollo personalizado",
  "Integraciones con sistemas existentes",
  "Gerente de cuenta dedicado",
  "SLA personalizado",
  "Opciones de implementación on-premise",
];
---

<Layout
  title="TurnApp - Precios"
  description="Precios simples y transparentes para instituciones de todos los tamaños. Comienza con una prueba gratuita y escala según crezcas."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto">
        <h1
          class="animate-on-scroll delay-0 text-4xl md:text-5xl font-bold leading-tight"
        >
          Precios <span class="gradient-text">Transparentes</span>
        </h1>
        <p class="animate-on-scroll delay-1 mt-6 text-xl text-gray-600">
          Comienza con una prueba gratuita y escala según crezca tu institución.
          Sin tarifas ocultas ni sorpresas.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {
          tiers.map((tier, index) => (
            <div
              class={`bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 relative animate-on-scroll delay-${index + 2}`}
            >
              {tier.name === "Profesional" && (
                <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-gradient-to-r from-payflo-purple to-payflo-blue text-white px-4 py-1 rounded-full text-sm font-medium">
                  Más Popular
                </div>
              )}
              <h3 class="text-2xl font-semibold">{tier.name}</h3>
              <div class="mt-4">
                <span class="text-4xl font-bold">{tier.price}</span>
                <span class="text-gray-600">{tier.period}</span>
              </div>
              <p class="mt-4 text-gray-600">{tier.description}</p>
              <ul class="mt-8 space-y-4">
                {tier.features.map((feature) => (
                  <li class="flex items-center text-gray-700">
                    <Icon
                      name="ph:check-circle-duotone"
                      class="h-5 w-5 text-payflo-purple mr-2"
                    />
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="mt-8">
                <a
                  href={tier.cta.href}
                  class="btn btn-primary w-full text-center"
                >
                  {tier.cta.text}
                </a>
              </div>
            </div>
          ))
        }

        <!-- Plan Empresarial -->
        <div
          class="bg-gradient-to-br from-payflo-purple to-payflo-blue rounded-xl p-8 text-white animate-on-scroll delay-4"
        >
          <h3 class="text-2xl font-semibold">Empresarial</h3>
          <div class="mt-4">
            <span class="text-2xl font-medium">Precio Personalizado</span>
          </div>
          <p class="mt-4 text-white/90">
            Para instituciones grandes con requerimientos personalizados y
            necesidades de nivel empresarial.
          </p>
          <ul class="mt-8 space-y-4">
            {
              enterpriseFeatures.map((feature) => (
                <li class="flex items-center">
                  <Icon
                    name="ph:check-circle-duotone"
                    class="h-5 w-5 text-white mr-2"
                  />
                  {feature}
                </li>
              ))
            }
          </ul>
          <div class="mt-8">
            <a
              href="/contact"
              class="btn bg-white text-payflo-purple hover:bg-white/90 w-full text-center"
            >
              Contactar Ventas
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tabla de Comparación -->
  <section class="py-20">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Comparar Planes</h2>
        <p class="mt-4 text-xl text-gray-600">
          Encuentra el plan perfecto para las necesidades de tu institución
        </p>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse animate-on-scroll">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="py-4 px-6 text-left">Características</th>
              <th class="py-4 px-6 text-center">Básico</th>
              <th class="py-4 px-6 text-center">Profesional</th>
              <th class="py-4 px-6 text-center">Empresarial</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Áreas de Servicio</td>
              <td class="py-4 px-6 text-center">5</td>
              <td class="py-4 px-6 text-center">15</td>
              <td class="py-4 px-6 text-center">Ilimitadas</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Puestos de Atención</td>
              <td class="py-4 px-6 text-center">10</td>
              <td class="py-4 px-6 text-center">30</td>
              <td class="py-4 px-6 text-center">Ilimitados</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Nivel de Soporte</td>
              <td class="py-4 px-6 text-center">Estándar</td>
              <td class="py-4 px-6 text-center">Prioritario</td>
              <td class="py-4 px-6 text-center">24/7 Dedicado</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Personalización HUB</td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Reportes Avanzados</td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:x-circle-duotone"
                  class="h-5 w-5 text-gray-400 mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">Desarrollo Personalizado</td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:x-circle-duotone"
                  class="h-5 w-5 text-gray-400 mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:x-circle-duotone"
                  class="h-5 w-5 text-gray-400 mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-4 px-6">App Móvil</td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
              <td class="py-4 px-6 text-center">
                <Icon
                  name="ph:check-circle-duotone"
                  class="h-5 w-5 text-payflo-purple mx-auto"
                />
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Preguntas Frecuentes -->
  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Preguntas Frecuentes</h2>
        <p class="mt-4 text-xl text-gray-600">
          ¿Tienes preguntas sobre nuestros precios? Consulta nuestras FAQ o
          contáctanos para más detalles.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/faq" class="btn btn-secondary">
            Ver Preguntas Frecuentes
          </a>
          <a href="/contact" class="btn btn-primary"> Contactarnos </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Garantía de Satisfacción -->
  <section class="py-16 bg-white border-t border-gray-200">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto">
        <div
          class="bg-green-50 border border-green-200 rounded-xl p-8 animate-on-scroll"
        >
          <Icon
            name="ph:shield-check-duotone"
            class="h-12 w-12 text-green-600 mx-auto mb-4"
          />
          <h3 class="text-2xl font-bold text-green-900 mb-4">
            Garantía de Satisfacción
          </h3>
          <p class="text-green-800 text-lg mb-4">
            Ofrecemos <strong>30 días de prueba gratuita</strong> para que puedas
            evaluar si TurnApp se adapta a las necesidades de tu institución.
          </p>
          <p class="text-green-700">
            Si no estás satisfecho durante el primer mes, te reembolsamos el
            100% de tu inversión.
          </p>
        </div>
      </div>
    </div>
  </section>

  <CTASection />
</Layout>
