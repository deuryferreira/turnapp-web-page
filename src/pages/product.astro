---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import productImage from "../assets/product-dashboard.png";
import { Icon } from "astro-icon/components";
import CTASection from "../components/CTASection.astro";

const features = [
  {
    title: "Experiencia Totalmente Integrada",
    description:
      "Integramos sin problemas la gestión de turnos y la señalización digital en su plataforma con nuestros componentes de UI.",
    icon: "ph:layout-duotone",
  },
  {
    title: "Analíticas y Reportes en Tiempo Real",
    description:
      "Mida tiempos de espera, eficiencia del personal y flujo de clientes para la toma de decisiones estratégicas.",
    icon: "ph:chart-line-duotone",
  },
  {
    title: "Múltiples Opciones de Llamado",
    description:
      "Soporte para tickets impresos, turnos virtuales vía SMS o app, y llamado directo desde el puesto de atención.",
    icon: "ph:megaphone-duotone", // CORREGIDO: Usando megaphone-duotone
  },
  {
    title: "Solución de Etiqueta Blanca (White-Label)",
    description:
      "Personalice completamente la interfaz para que coincida con su marca, haciendo que se sienta como una parte nativa de su institución.",
    icon: "ph:paint-brush-duotone",
  },
  {
    title: "Gestión Centralizada de Colas",
    description:
      "Administre múltiples áreas de servicio y sucursales desde un panel centralizado, asegurando la uniformidad operativa.",
    icon: "ph:flow-chart-duotone",
  },
  {
    title: "Configuración Rápida y Sencilla",
    description:
      "Nuestros expertos se encargan de la implementación y configuración de los flujos de atención sin requerir recursos técnicos de su parte.",
    icon: "ph:wrench-duotone",
  },
];
---

<Layout
  title="TurnApp - Producto"
  description="La plataforma de TurnApp digitaliza y optimiza la gestión de filas y la atención al cliente, impulsando la eficiencia operativa y la satisfacción."
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="animate-on-scroll">
          <h1 class="text-4xl md:text-5xl font-bold leading-tight">
            Una <span class="gradient-text">Visión Moderna</span> para la Gestión
            de Turnos
          </h1>
          <p class="mt-6 text-xl text-gray-600 max-w-lg">
            La plataforma TurnApp es fácil de usar y rápida de implementar,
            ofreciendo infraestructura de calidad y características que
            encantarán a sus clientes.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <a href="/book-demo" class="btn btn-primary">Solicitar Demo</a>
            <a href="/documentation" class="btn btn-secondary"
              >Ver Manuales y Guías</a
            >
          </div>
        </div>

        <div class="animate-on-scroll" style="animation-delay: 0.2s;">
          <div class="relative">
            <div
              class="absolute -inset-0.5 bg-gradient-to-r from-payflo-purple to-payflo-blue rounded-xl blur opacity-30"
            >
            </div>
            <div class="relative bg-white rounded-xl shadow-xl overflow-hidden">
              <Image
                src={productImage}
                alt="Panel de Control del Producto TurnApp"
                class="w-full h-auto"
                width={700}
                height={500}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-payflo-gray">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold">Características Clave</h2>
        <p class="mt-4 text-xl text-gray-600">
          Todo lo que necesita para ofrecer una solución completa y eficiente de
          gestión de filas a sus clientes.
        </p>
      </div>

      <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          features.map((feature, index) => (
            <div
              class="bg-white rounded-xl p-8 shadow-sm animate-on-scroll"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="h-12 w-12 rounded-lg bg-gradient-to-r from-payflo-purple to-payflo-blue flex items-center justify-center text-white mb-6">
                <Icon name={feature.icon} class="h-6 w-6" />
              </div>
              <h3 class="text-xl font-semibold">{feature.title}</h3>
              <p class="mt-3 text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <CTASection />
</Layout>
