---
import { Image } from "astro:assets";
import logoSrc from "../assets/logo.svg"; // Asumiendo que usarás el logo de TurnApp

const companyLinks = [
  { name: "Nosotros", href: "/about-us" },
  { name: "Carreras", href: "/careers" },
  { name: "Contacto", href: "/contact" },
  { name: "Blog", href: "/blog" },
];

const resourceLinks = [
  // Adaptado para un sistema de turnos B2B (menos técnico, más funcional)
  { name: "Manual de Usuario", href: "/documentation" },
  { name: "Guías de Implementación", href: "/implementation-guides" },
  { name: "Tutoriales", href: "/tutorials" },
  { name: "Casos de Estudio", href: "/case-studies" },
];

const legalLinks = [
  { name: "Política de Privacidad", href: "/privacy-policy" },
  { name: "Términos de Uso", href: "/terms-of-use" },
  { name: "Política de Cookies", href: "/cookie-policy" },
];

const socialLinks = [
  { name: "Twitter", href: "https://twitter.com/turnapp", icon: "twitter" }, // URL de ejemplo para TurnApp
  {
    name: "LinkedIn",
    href: "https://linkedin.com/company/turnapp-solutions", // URL de ejemplo para TurnApp
    icon: "linkedin",
  },
  { name: "YouTube", href: "https://youtube.com/@turnapp", icon: "youtube" }, // Añadido YouTube (más relevante para demos B2B)
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8 relative overflow-hidden">
  <div class="absolute inset-0 opacity-5">
    <div
      class="absolute inset-0 bg-repeat"
      style="background-image: url('/grid-pattern.svg');"
    >
    </div>
  </div>

  <div
    class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-payflo-purple via-payflo-blue to-payflo-purple bg-[length:200%_auto] animate-gradient-x"
  >
  </div>

  <div class="container-custom relative">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 pb-12 border-b border-gray-800"
    >
      <div class="lg:col-span-2">
        <a
          href="/"
          class="inline-block transition-transform duration-300 hover:scale-105"
          aria-label="TurnApp home"
        >
          <Image
            src={logoSrc}
            alt="TurnApp Logo"
            width={120}
            height={40}
            class="brightness-0 invert"
          />
        </a>
        <p class="mt-4 text-gray-400 max-w-md">
          TurnApp es la solución experta para digitalizar, centralizar y
          optimizar el flujo de atención al cliente y la gestión de filas en su
          institución.
        </p>
        <div class="mt-6 flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-all duration-300 hover:scale-110 transform"
                aria-label={social.name}
              >
                {/* SVG Icons (Mantengo solo los necesarios y añado YouTube si aplica) */}
                {social.icon === "twitter" && (
                  <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                )}
                {social.icon === "linkedin" && (
                  <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                  </svg>
                )}
                {social.icon === "youtube" && (
                  <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M19.615 3.195a2.404 2.404 0 0 0-1.636-1.636c-2.316-.628-11.583-.628-13.899 0a2.404 2.404 0 0 0-1.636 1.636C2.152 5.511 2.152 14.49 4.305 16.805a2.404 2.404 0 0 0 1.636 1.636c2.316.628 11.583.628 13.899 0a2.404 2.404 0 0 0 1.636-1.636C21.848 14.49 21.848 5.51 19.615 3.195zm-9.78 12.015v-8.83l6.565 4.415-6.565 4.415z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>

      <div>
        <h3
          class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300"
        >
          Compañía
        </h3>
        <ul class="space-y-3">
          {
            companyLinks.map((link, index) => (
              <li class="transform transition-all duration-300 hover:translate-x-1">
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                  style={`transition-delay: ${index * 50}ms;`}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3
          class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300"
        >
          Recursos
        </h3>
        <ul class="space-y-3">
          {
            resourceLinks.map((link, index) => (
              <li class="transform transition-all duration-300 hover:translate-x-1">
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                  target={link.href.startsWith("http") ? "_blank" : undefined}
                  rel={
                    link.href.startsWith("http")
                      ? "noopener noreferrer"
                      : undefined
                  }
                  style={`transition-delay: ${index * 50}ms;`}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3
          class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300"
        >
          Legal
        </h3>
        <ul class="space-y-3">
          {
            legalLinks.map((link, index) => (
              <li class="transform transition-all duration-300 hover:translate-x-1">
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                  style={`transition-delay: ${index * 50}ms;`}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="pt-8 text-center text-gray-400 text-sm">
      <p class="hover:text-gray-300 transition-colors duration-300">
        &copy; {new Date().getFullYear()} Ferreira TIC. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
