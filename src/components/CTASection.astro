---
// --- Texto Principal ---
const mainTitle = "¿Listo para eliminar el caos y optimizar su servicio?";
const mainSubtitle =
  "Únase a las instituciones líderes que ya transformaron su gestión de filas y atención al cliente con la infraestructura de TurnApp.";

// --- CTAs ---
const ctaPrimaryText = "Solicitar una Consulta Gratuita"; // O Demostración
const ctaSecondaryText = "Ver Caso de Estudio"; // O Soluciones
// -----------------------
---

<section
  class="py-20 bg-gradient-to-r from-payflo-purple to-payflo-blue text-white relative overflow-hidden"
>
  <div class="absolute inset-0 overflow-hidden opacity-10">
    <div
      class="absolute -top-40 -left-40 w-80 h-80 bg-white rounded-full blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute top-40 -right-20 w-60 h-60 bg-white rounded-full blur-3xl animate-pulse"
      style="animation-delay: 1s;"
    >
    </div>
    <div
      class="absolute -bottom-40 left-1/3 w-80 h-80 bg-white rounded-full blur-3xl animate-pulse"
      style="animation-delay: 2s;"
    >
    </div>
  </div>

  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold">
        {mainTitle}
      </h2>
      <p class="mt-6 text-xl opacity-90">
        {mainSubtitle}
      </p>
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="/contact"
          class="btn bg-white text-payflo-purple hover:bg-opacity-90 transform transition-all duration-300 hover:scale-105 hover:shadow-lg"
        >
          {ctaPrimaryText}
        </a>
        <!-- <a
          href="/case-studies"
          class="btn border border-white hover:bg-white/20 transform transition-all duration-300 hover:scale-105"
        >
          {ctaSecondaryText}
        </a> -->
      </div>
    </div>
  </div>
</section>
